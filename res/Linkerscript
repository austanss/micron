ENTRY(kernel_entry)

SECTIONS
{
	. = 1M;

	_kernel_start = .;
	
	.stivalehdr : 
	{
        KEEP(*(.stivalehdr))
    }

	.text :
	{
		*(.text .text.*)
		. = ALIGN(4K);
	}

	.rodata :
	{
		*(.rodata .rodata.*)
		. = ALIGN(4K);
	}

	.data :
	{
		*(.data.rel.ro.local*) *(.data.rel.ro .data.rel.ro.*) *(.data.*)
		. = ALIGN(4K);
	}

	.gdt :
	{
		*(.gdt)
		. = ALIGN(4K);
	}

	.bss :
	{
		*(.bss .bss.*);
		. = ALIGN(4K);
	}
	_kernel_end = .;
}
